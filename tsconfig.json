{
  "compilerOptions": {
    "sourceMap": true,
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": ".",
		"alwaysStrict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
    "paths": {
			"@src/*": ["src/*"],
			"@Domain/*": ["src/Domain/*"],
			"@Infrastructure/*": ["src/Infrastructure/*"],
			"@test/*": ["src/test/*"],
			"@Presentation/*": ["src/Presentation/*"],
			"@Application/*": ["src/Application/*"]
		},

  }
}
